/* Matrix_Wx/InputModal/InputModal.wxss */
.modal-box{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  justify-content: center;
  align-items: center;
  z-index: 100;
  display: flex
}

.mask{
  width: 100%;
  height: 100%;
  background-color: #666;
  opacity: 0.5;
  position: absolute;
}

.content{
  width: 100%;
  margin: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  position: relative;
  z-index: 200;
  border-radius: 20rpx;
  text-align: center
}

.title{
  font-size: 40rpx;
  font-weight: bold;
  margin: 30rpx 0;
}

textarea{
  width:auto;
  margin: 20rpx 20rpx; 
  box-sizing: border-box;
  border: solid 1rpx #eee;
  padding: 20rpx;
  height: 150rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  text-align: left;
  border-radius: 10rpx;
}

.placeholder{
  line-height: 24rpx;
  vertical-align: top;
  display: inline-block
}

.btn-box{
  display: flex;
  border-top: solid 1rpx #eee;
}

.btn{
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #666
}
/* default */
.tab{
  width: 100%;
  box-sizing: border-box;
  height: 100rpx;
  background-color: #fff;
  line-height: 100rpx;
  display: flex;
  justify-content: center;
  align-items:center;
  font-size: 28rpx;
  border-bottom: solid 10rpx #f5f5f5;
  color: #000;
  padding: 0 40rpx;
  z-index: 10
}

.fixed{
  position: fixed
}


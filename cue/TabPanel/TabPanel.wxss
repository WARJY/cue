.tab-item{
  flex: 1;
  text-align: center;
  line-height: 60rpx;
  padding: 0 30rpx;
  border: solid 1rpx #2baa6d;
 
}
.tab-item:first-child{border-top-left-radius: 20rpx;border-bottom-left-radius: 20rpx;}
.tab-item:last-child{border-top-right-radius: 20rpx;border-bottom-right-radius: 20rpx;}
 

.tab-item.active{
  font-weight: bold;
  background-color: #2baa6d;
  color: #fff
}

.panel-view{
  width: 100%;
  height: auto;
  overflow: hidden
}

.panel-content{
  height: auto;
  position: relative
}

.panel-item{
  position: relative;
  display: inline-block
}

/* orange */
.tab.orange{
  background-color: #31c27c;
  color: #fff
}

.tab.orange .tab-item.active{
  background-color: #2baa6d
}

/* orange-btm */
.tab.orange-btm{
  background-color: #2baa6d;
  color: #fff
}

.tab.orange-btm .tab-item.active{
  background-color: #2baa6d;
  color:#fff;
  border-bottom: solid 1rpx #2baa6d
}

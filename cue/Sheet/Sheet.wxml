<view style='background:#000;position:absolute;bottom:0;right:0;left:0;top:0;opacity:.3;z-index:998' wx:if="{{flag}}"></view>
<view class='container' style='position:fixed;bottom:0;left:0;right:0;margin:0;border-top-left-radius: 20rpx;border-top-right-radius: 20rpx;z-index:999;background:#fff;' wx:if="{{flag}}">
  <view class='modal-title' style='height:100rpx;line-height:100rpx;text-align:center;color:#686868'>{{title}}</view>
  <scroll-view scroll-y style="height: 800rpx;" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
    <list value="{{value}}" name="{{item}}" theme='playList' bindgopage='gopage' />
  </scroll-view>
  <view class='modal-title1' style='height:120rpx;line-height:120rpx;text-align:center;background:#f5f5f5;color:#686868' bindtap='close'>关闭</view>
</view>
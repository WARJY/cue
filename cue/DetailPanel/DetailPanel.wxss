.page {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  color: #333;
}

.container {
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.flex {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-item {
  flex: 1;
}

.page-cell {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  margin: 0 0 20rpx 0;
  background-color: #fff;
}

.panel {
  padding: 20rpx 30rpx;
}

.panel .title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.panel .content {
  font-size: 28rpx;
  margin-top: 10rpx;
}

.page-panel {
  width: 100%;
  box-sizing: border-box;
  border-top: solid 1px #eee;
  margin-top: 20rpx;
  padding: 20rpx 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.page-panel .content {
  flex: 1;
  margin-left: 20rpx;
}

.page-panel .title1 {
  font-size: 40rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
}

.page-panel .right1 {
  font-size: 28rpx;
  font-weight: normal;
  text-align: right;
  flex: 1;
}

.page-panel .title2 {
  font-size: 28rpx;
  margin-top: 20rpx;
  color: #999;
}

.page-cell .item {
  width: calc(100% - 80rpx);
  position: relative;
  margin: 0 40rpx;
  box-sizing: border-box;
  border-bottom: solid 1px #eee;
  height: 40rpx;
  margin-bottom: 40rpx;
  margin-top: 10rpx;
}

.page-cell .item .title {
  width: 100%;
  text-align: center;
  position: absolute;
  font-size: 40rpx;
  top: 20rpx;
  z-index: 2;
}

.page-cell .item .title>view {
  width: 50%;
  margin: 0 auto;
  background-color: #fff;
}

/* Matrix_Wx/TitlePanel/TitlePanel.wxss */

.title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding:20rpx 0 20rpx 0;
}

.border-left {
  position: relative;
  padding-left: 20rpx;
  font-weight: 700;
  font-size: 36rpx;
  color: #202020;
}

.border-left::after {
  content: " ";
  position: absolute;
  left: -5px;
  top: 3px;
  width: 1px;
  bottom: 3px;
  border-left: 10px solid #ffa42f;
  color: #ffa42f;
  -webkit-transform-origin: 100% 0;
  transform-origin: 100% 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
  border-radius: 2px;
}

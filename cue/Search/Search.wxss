.search-bar {
  padding: 10px 15px;
  display: flex;
  align-items: center; /*垂直居中*/
  justify-content: center; /*水平居中*/
  color: #2e2e2e;
  opacity: 0.8;
}

.search-bar-hd {
  height: 34px;
  line-height: 34px;
}

.btn-city {
  display: inline-block;
  vertical-align: middle;
  font-size: 16px;
}

.btn-down {
  width: 10px;
  height: 10px;
  margin-left: 10px;
  display: inline-block;
  vertical-align: middle;
}

.search-bar-bd {
  padding: 0 10px;
  height: 34px;
  flex: 1;
  position: relative;
}

.btn-search {
  width: 16px;
  height: 16px;
  display: inline-block;
  vertical-align: middle;
  position: absolute;
  top: 10px;
  left: 40rpx;
  opacity: 0.8;
  z-index: 2;
}

.btn-search-on{
  width: 16px;
  height: 16px;
  display: inline-block;
  vertical-align: middle;
  position: absolute;
  top: 10px;
  left: 20px;
  opacity: 0.8;
  z-index: 2;
}

.search-placeholder{
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.search-placeholder-on{
  text-align: left;
}

.search-eara {
  border-radius: 20px;
  height: 34px;
  padding: 0 30px;
  font-size: 26rpx;
  color: #000;
  background-color: #f5f5f5
}

.search-detail {
  height: calc(100vh - 94px);
  background-color: #f5f5f5;
  padding: 20px 15px;
}

.search-history {
  max-height: 50%;
  font-size: 14px;
  color: #2e2e2e;
}

.history-title-hd{
  padding-left: 30rpx
}

.history-title-hd {
  display: inline-block;
  position: relative;
}

.history-title-clear{
  display: inline-block;
  float: right;
}

.btn-delete {
  width: 16px;
  height: 16px;
  position: absolute;
  right: 20px;
}

.search-history-content {
  padding: 16px 10rpx;
  color: #666;
}

.search-history-item {
  background-color: #fff;
  border-radius: 20px;
  padding: 6px 15px;
  display: inline-block;
  margin: 5px;
  color: #666
}

.matching{
  width: 100%;
  font-size: 16px;
  color: #2e2e2e;
  margin-top: -16px;
  margin-right: 40px;
}

.matching-item{
  border-bottom: solid 1px #dddddd;
  padding: 10px 30px;
  position: relative;
  padding-left: 50rpx;
  font-size: 26rpx;
}

.matching-item-search {
  width: 16px;
  height: 16px;
  display: inline-block;
  vertical-align: middle;
  position: absolute;
  top: 8px;
  left: 0rpx;
  opacity: 0.3;
  z-index: 2;
}


/* 首页 */
.main .search-bar{
  margin-top: 240rpx;
}
.main .btn-search{
  left: 240rpx;
}

.nav .search-detail{
  height: calc(100vh - 158px);
}
.nav .city-box{
  height: calc(100vh - 18px);
}

.city-box{
  background-color: #f5f5f5;
  width: 100%;
  position: absolute;
  top:128rpx;
  z-index: 10
}

.hot-title{
  font-size: 30rpx;
  padding: 20rpx 30rpx;
}

.hot-content{
  color: #999999;
  background-color: #fff;
  padding: 0 30rpx 30rpx 30rpx;
}

.hot-item{
  display: inline-block;
  width: 25%;
  text-align: center;
  font-size:30rpx;
  margin-top: 30rpx;
}

.btn-hot{
  border: solid 1px #dddddd;
  padding: 4rpx 50rpx;
  display: inline-block;
  border-radius: 30rpx;
}


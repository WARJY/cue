/* default */
 
.bar {
  width:100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  position: relative;
  height: 88rpx;
  z-index: 10
}

.fixed{
  position: fixed;
}

.bar::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #eee;
  color: #eee;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.search-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  padding: 20rpx 0;
}

.search-item.active {
  color: red;
}

.detail-mask {
  width: 100%;
  position: absolute;
  top: 88rpx;
  min-height: 500rpx;
  height: 100vh;
  z-index: 5;
  background-color: #999;
  opacity: 0.5;
}

.detail {
  width: 100%;
  height: 400rpx;
  position: absolute;
  top: 88rpx;
  z-index: 10;
  left: 0;
  right: 0;
  background-color: #fff;
}

.detail-item {
  margin: 0 30rpx;
  box-sizing: border-box;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #333;
  position: relative;
}

.detail-item.active {
  color: red;
}

.detail-item::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #eee;
  color: #eee;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

/* orange */
.orange .search-item.active {
  color: #f1c528;
}

.orange .detail-item.active {
  color: #f1c528;
}

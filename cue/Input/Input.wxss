.input-box {
  position: relative;
  display: flex;
  align-items: center;
  z-index: 10
}

.input-box::before {
  content: " ";
  position: absolute;
  bottom: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #e5e5e5;
  color: #e5e5e5;
  transform-origin: 0 0;
  transform: scaleY(0.5);
  left: 0;
  z-index: 2;
}

.input-box.nb:before {
  border: 0 !important;
}

.input-box-code {
  padding-top: 0;
  padding-right: 0;
  padding-bottom: 0;
}

.input-bd {
  flex: 1;
  position: relative;
  z-index: 10
}

.input-ft {
  font-size: 0;
  text-align: right;
  color: #808080;
}
.input-ft i{font-size:28rpx;color:#c7c7cc}
.input-title {
  padding: 0 15px;
  color: #808080;
  font-size: 14px;
  height: 100rpx;
  line-height: 100rpx
}

.input-label {
  display: block;
  width: 105px;
  word-wrap: break-word;
  word-break: break-all;
  font-size: 30rpx;
}

.input-qh {
  display: block;
  width: 60px;
  word-wrap: break-word;
  word-break: break-all;
  color: #d1d1d1;
  padding-left:20rpx;
}

.input-input {
  width: 100%;
  border: 0;
  outline: 0;
  -webkit-appearance: none;
  background-color: transparent;
  color: inherit;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  padding-left:20rpx;
 
}

.input-code-btn {
  background-color: transparent;
  border-top: 0;
  border-right: 0;
  border-bottom: 0;
  outline: 0;
  display: inline-block;
  width: 90px;
  height: 45px;
  margin-left: 5px;
  padding: 0 0.6em 0 0.7em;
  border-left: 1px solid #e5e5e5;
  line-height: 45px;
  vertical-align: middle;
  font-size: 28rpx;
  color: #666666;
  text-align: center;
}

.placeholder{
  color: #d1d1d1;
}

.input-area{
  width: 100%;
  box-sizing: border-box;
  height: 200rpx;
  background-color: #fff;
  padding: 30rpx;
  font-size: 30rpx;
  line-height: 30rpx;
}

.count{
  font-size: 30rpx;
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  color: #999999
}

.page {
  width:100%;
  height: 100vh;
  background-color:#f4f4f4;
  color: #333;
  position: fixed;
  top: 0;
  left: 0;
  bottom:0;
  right:0;
  z-index: 9999;
  box-sizing: border-box
}

.select{
  padding: 10px
}

.select-item{
  display: inline-block;
  padding: 5px 10px;
  background-color: #fff;
  border-radius: 10px;
  color: #333;
  margin: 5px 10px;
  font-size: 30rpx
}

.select-item.active{
  background-color: #999;
  color: #fff
}

.recharge {
  padding: 40rpx 20rpx;
  background-color: #fff;
  margin-top: 20rpx
}

.recharge .title {
  font-size: 28rpx;
}

.recharge .unit {
  position: absolute;
  left: 0;
  font-size: 48rpx;
  top: -5rpx;
}

.recharge .input {
  margin-left: 40rpx;
  margin-top: 40rpx;
  font-size: 48rpx;
}
